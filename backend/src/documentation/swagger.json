{
  "openapi": "3.0.0",
  "info": {
    "title": "API Documentation",
    "description": "API de Documentação do sistema Dev System",
    "contact": {
      "email": "gabriel.arantesresende@gmail.com"
    },
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Níveis",
      "description": "Endpoints relacionados aos níveis"
    },
    {
      "name": "Desenvolvedores",
      "description": "Endpoints relacionados aos desenvolvedores"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:3333",
      "description": "Local server"
    },
    {
      "url": "https://dev-system-backend.herokuapp.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/niveis": {
      "get": {
        "tags": ["Níveis"],
        "summary": "Lista todos os níveis",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Filtro por nível",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "required": false,
            "schema": {
              "type": "integer"
            },
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de níveis",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Nivel"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer",
                          "example": 10
                        },
                        "per_page": {
                          "type": "integer",
                          "example": 10,
                          "default": 10
                        },
                        "current_page": {
                          "type": "integer",
                          "example": 1
                        },
                        "last_page": {
                          "type": "integer",
                          "example": 1
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nenhum nível encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Nenhum nível encontrado"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao buscar níveis."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Níveis"],
        "summary": "Cria um novo nível",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nivel": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Nível criado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Nivel"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "O campo 'nivel' é obrigatório."
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Nível já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Um nível com este nome já existe."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao criar nível."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/niveis/{id}": {
      "put": {
        "tags": ["Níveis"],
        "summary": "Atualiza um nível existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do nível",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nivel": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Nível atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Nivel"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Campos obrigatórios não preenchidos."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nível não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Nível não encontrado."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao atualizar nível."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Níveis"],
        "summary": "Remove um nível existente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do nível",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Nível removido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Nivel"
                }
              }
            }
          },
          "404": {
            "description": "Nível não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Nível não encontrado."
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "Nível não pode ser removido",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Este nível possui desenvolvedores associados."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao remover nível."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/desenvolvedores": {
      "get": {
        "tags": ["Desenvolvedores"],
        "summary": "Lista todos os desenvolvedores",
        "responses": {
          "200": {
            "description": "Lista de desenvolvedores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Desenvolvedor"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer",
                          "example": 10
                        },
                        "per_page": {
                          "type": "integer",
                          "example": 10,
                          "default": 10
                        },
                        "current_page": {
                          "type": "integer",
                          "example": 1
                        },
                        "last_page": {
                          "type": "integer",
                          "example": 1
                        }
                      }
                    }
                  }
                }
              }
            },
            "404": {
              "description": "Nenhum desenvolvedor encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Nenhum desenvolvedor encontrado"
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Erro ao buscar desenvolvedores."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Desenvolvedores"],
        "summary": "Cria um novo desenvolvedor",
        "responses": {
          "201": {
            "description": "Desenvolvedor criado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Desenvolvedor"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Campos obrigatórios não preenchidos."
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "example": "Erro ao criar desenvolvedor."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/desenvolvedores/{id}": {
      "put": {
        "tags": ["Desenvolvedores"],
        "summary": "Atualiza um desenvolvedor existente",
        "responses": {
          "200": {
            "description": "Desenvolvedor atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Desenvolvedor"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Campos obrigatórios não preenchidos."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Desenvolvedor não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Desenvolvedor não encontrado."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao atualizar desenvolvedor."
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["Desenvolvedores"],
        "summary": "Remove um desenvolvedor existente",
        "responses": {
          "204": {
            "description": "Desenvolvedor removido",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Desenvolvedor"
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Campos obrigatórios não preenchidos."
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Desenvolvedor não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Desenvolvedor não encontrado."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Erro ao remover desenvolvedor."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Nivel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "nivel": {
            "type": "string",
            "example": "Junior"
          }
        }
      },
      "Desenvolvedor": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nome": {
            "type": "string"
          },
          "nivel_id": {
            "type": "integer"
          },
          "sexo": {
            "type": "string"
          },
          "data_nascimento": {
            "type": "string",
            "format": "date"
          },
          "hobby": {
            "type": "string"
          }
        }
      }
    }
  }
}
